<?xml version="1.0"?>
<states>
  <menu>
    <object type="button" alias="play_button" x="100" y="100" width="400" height="100" texture="images/play.png" callback_id="play"/>
    <object type="button" alias="exit_button" x="100" y="300" width="400" height="100" texture="images/exit.png" callback_id="exit"/>
  </menu>
  <pause>
    <object type="button" alias="resume_button" x="200" y="50" width="200" height="80" texture="images/resume.png" callback_id="resume"/>
    <object type="button" alias="restart_button" x="200" y="150" width="200" height="80" texture="images/restart.png" callback_id="restart"/>
    <object type="button" alias="to_menu_button" x="200" y="250" width="200" height="80" texture="images/to_menu.png" callback_id="to_menu"/>
  </pause>
  <playing>
    <object type="gamer" alias="shiep" x="300" y="150" width="64" height="64" frames="2" texture="images/shiep.png"/>
  </playing>
</states>
